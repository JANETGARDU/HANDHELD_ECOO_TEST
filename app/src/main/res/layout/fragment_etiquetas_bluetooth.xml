<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_pickingtareas"
    android:layout_width="320dp"
    android:layout_height="390dp"
    android:orientation="vertical"
    android:layout_marginStart="30dp"
    android:layout_marginVertical="15dp"
    android:background="@drawable/bordes_etiqueta_bluetooth">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:padding="2dp"
        android:layout_marginVertical="5dp">

        <TextView
            android:id="@+id/lb_codigo_impresion"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:textAlignment="center"
            android:textColor="#27391C"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonOcultarImpresionEtiquetas"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_marginStart="50dp"
            android:layout_width="35dp"
            android:layout_height="33dp"
            android:paddingStart="0dp"
            app:icon="@drawable/logo_cerrar_rectangulo"
            app:cornerRadius="0dp"
            app:iconSize="35dp"
            app:iconTintMode="add"
            app:rippleColor="#EBB0B0"
            app:strokeColor="#E42937"
            app:iconTint="@android:color/transparent" />

    </LinearLayout>
    <TextView
        android:id="@+id/lb_seleccion_impresiona"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="@string/lb_seleccionaImpresora"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="37dp">

        <AutoCompleteTextView
            android:id="@+id/cbSelectImpresora"
            android:layout_width="240dp"
            android:layout_height="70dp"
            android:ellipsize="end"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/lb_numero_etiquetas"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="@string/lb_cuantas_etiquetasdeseasImprimir"
        android:textAlignment="center"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="34dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginVertical="5dp">

        <TextView
            android:id="@+id/lb_numero"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="0dp"
            android:layout_marginStart="45dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/lb_n"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/txtImpresorasCantidad"
            android:layout_width="150dp"
            android:layout_marginVertical="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonConfirmar_impresion"
        android:layout_width="145dp"
        android:layout_height="60dp"
        android:layout_marginStart="85dp"
        android:backgroundTint="#92C7CF"
        android:paddingStart="2dp"
        android:paddingTop="1dp"
        android:paddingEnd="0dp"
        android:text="Imprimir"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="27dp" />
</LinearLayout>